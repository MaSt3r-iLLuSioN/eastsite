{% extends "base.html.twig" %}
{% block title %}Edit Menu Item From {{menu.title}}{% endblock %}
{% block page_header %}Edit Menu Item: {{menuItem.title}} From {{menu.title}}{% endblock %}
{% block body %}
    <form class="shake" action="{{ path('editMenuItem',{'menu':menu.id, 'menuItem':menuItem.id}) }}" method="post">
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="title" class="">Title</label>
                {{form_widget(form.title)}}
            </div>

            <div class="col-md-6 form-group">
                <label for="url" class="">URL</label>
                {{form_widget(form.url)}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="parent" class="">Parent</label>
                {{form_widget(form.parent)}}
            </div>

            <div class="col-md-6 form-group">
                <label for="priority" class="">Priority</label>
                {{form_widget(form.priority)}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="hascategory">Link Category Group</label>
                {{form_widget(form.hascategory)}}
            </div>
            <div class="col-md-6 form-group">
                <label for="category">Category Group</label>
                {{form_widget(form.category)}}
            </div>
        </div>
        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-save"></i> Save Menu Item</button>
        <a href="/admin/menus" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}