{% extends "base.html.twig" %}
{% block title %}Delete {{ menuItem.title }} from {{menu.title}}?{% endblock %}
{% block page_header %}Delete {{ menuItem.title }} from {{menu.title}}?{% endblock %}
{% block body %}
    <h3>Are you sure you want to delete menu item: {{menuItem.title}}? All children items will become parents. This action cannot be undone.</h3>
    <form class="shake" action="{{ path('deleteMenuItem', {'menu':menu.id, 'menuItem':menuItem.id}) }}" method="post">
            <div class="form-group">
                <label for="hidden" class="sr-only">hidden</label>
                {{form_widget(form.hidden)}}
            </div>
        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-trash"></i> Delete Menu Item</button>

        <a href="/admin/menus" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}