{% extends "base.html.twig" %}
{% block title %}Edit Blog Post "{{post.title}}"{% endblock %}
{% block page_header %}Edit Blog Post "{{post.title}}"{% endblock %}
{% block body %}
    <form class="shake" action="{{ path('editBlogPost', {'blog':post.id}) }}" method="post">
        <fieldset>
            <legend>Basic Settings</legend>
            <div class="form-group">
                <label for="title" class="">Post Title:</label>
                {{form_widget(form.title)}}
            </div>
            <div class="form-group">
                <label for="content" class="">Post Content:</label>
                {{form_widget(form.content)}}
            </div>
        </fieldset>
            
        <fieldset>
            <legend>Meta Settings</legend>
            <div class="form-group">
                <label for="metakeywords" class="">Meta Keywords:</label>
                {{form_widget(form.metakeywords)}}
            </div>
            <div class="form-group">
                <label for="metadescription" class="">Meta Description:</label>
                {{form_widget(form.metadescription)}}
            </div>
        </fieldset>
            
        <fieldset>
            <legend>Category Settings</legend>
            <div class="form-group">
                <label for="category" class="">Post Category:</label>
                {{form_widget(form.category)}}
            </div>
        </fieldset>
            
        <fieldset>
            <legend>Post Files</legend>
            {{form_widget(form.postfile)}}
        </fieldset>

        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-save"></i> Save Post</button>
        <a href="/admin/blog" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}