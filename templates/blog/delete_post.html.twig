{% extends "base.html.twig" %}
{% block title %}Delete Blog Post: {{ post.title }}?{% endblock %}
{% block page_header %}Delete Blog Post: {{ post.title }}?{% endblock %}
{% block body %}
    <h3>Are you sure you want to delete blog post: {{post.title}}? This action cannot be undone.</h3>
    <form class="shake" action="{{ path('deleteBlogPost', {'blog':post.id}) }}" method="post">
            <div class="form-group">
                <label for="hidden" class="sr-only">hidden</label>
                {{form_widget(form.hidden)}}
            </div>
        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-trash"></i> Delete Post</button>

        <a href="/admin/blog" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}