{# templates/registration/register.html.twig #}
{% extends "base.html.twig" %}
{% block title %}User Registration{% endblock %}
{% block page_header %}User Registration{% endblock %}
{% block body %}     
    <div class="col-md-7 contact-form contact-info-section">
        <form class="shake" action="{{ path('user_registration') }}" method="post">
            <div class="form-group">
                <label for="_username" class="sr-only">Username</label>
                {{form_widget(form.username)}}
            </div>
            <div class="form-group">
                <label for="email" class="sr-only">Email</label>
                {{form_widget(form.email)}}
            </div>
            <div class="form-group">
                {{form_widget(form.plainPassword.first)}}
            </div>
            <div class="form-group">
                {{form_widget(form.plainPassword.second)}}
            </div>
            {{ form_rest(form) }}
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-envelope"></i> Register</button>

            <div class="clearfix"></div>
        </form>
    </div>
{% endblock %}