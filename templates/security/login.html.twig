{% extends "base.html.twig" %}
{% block title %}User Login{% endblock %}
{% block page_header %}User Login{% endblock %}
{% block body %}       
    <div class="col-md-8 contact-form contact-info-section">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="shake" action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="_username" class="">Username</label>
                {{form_widget(form._username)}}
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                {{form_widget(form._password)}}
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-envelope"></i> Login</button>
            {#
            <span> Or Login With:</span>
            #}<div class="clearfix"></div>
        </form>
