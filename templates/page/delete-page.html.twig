{% extends "base.html.twig" %}
{% block title %}Delete Page: {{ page.title }}?{% endblock %}
{% block page_header %}Delete Page: {{ page.title }}?{% endblock %}
{% block body %}
    <h3>Are you sure you want to delete page: {{page.title}}?</h3>
    <form class="shake" action="{{ path('deletePage', {'url':page.url}) }}" method="post">
            <div class="form-group">
                <label for="hidden" class="sr-only">hidden</label>
                {{form_widget(form.hidden)}}
            </div>
        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-trash"></i> Delete Page</button>

        <a href="/admin/page" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}

