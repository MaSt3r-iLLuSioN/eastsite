{% extends "base.html.twig" %}
{% block title %}Delete Tab: {{ tab.title }}?{% endblock %}
{% block page_header %}Delete Tab: {{ tab.title }}?{% endblock %}
{% block body %}
    <h3>Are you sure you want to delete tab: {{tab.title}} from {{tabGroup.title}}?</h3>
    <form class="shake" action="{{ path('tabDeleteTab', {'tabListId':tabGroup.id, 'tabId':tab.id}) }}" method="post">
            <div class="form-group">
                <label for="hidden" class="sr-only">hidden</label>
                {{form_widget(form.hidden)}}
            </div>
        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-trash"></i> Delete Tab</button>

        <a href="/admin/tabs/{{tabGroup.id}}" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}
