{% extends "base.html.twig" %}
{% block title %}Editing Tab: {{ tab.title }}{% endblock %}
{% block page_header %}Editing Tab: {{ tab.title }}{% endblock %}
{% block body %}
    <form class="shake" action="{{ path('tabEditTab', {'tabListId':tabGroup.id, 'tabId':tab.id}) }}" method="post">
        <div class="form-group">
            <label for="title" class="sr-only">Title</label>
            {{form_widget(form.title)}}
        </div>
        <div class="form-group">
            <label for="content" class="sr-only">Content</label>
            {{form_widget(form.content)}}
        </div>

        <button class="btn btn-common btn-md" type="submit" id="form-submit" style="pointer-events: all; cursor: pointer;"><i class="fa fa-save"></i> Save Tab</button>
        <a href="/admin/tabs/{{tabGroup.id}}" class="btn btn-common btn-md m-r-1"><i class="fa fa-ban"></i>Cancel</a>
    </form>
{% endblock %}