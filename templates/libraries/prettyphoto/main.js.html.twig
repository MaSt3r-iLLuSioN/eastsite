<script src="/assets/libraries/prettyphoto/js/jquery.prettyPhoto.js"></script>
<script type="text/javascript" charset="utf-8">
$(document).ready(function(){
    $("a[rel^='prettyPhoto']").prettyPhoto({
        animation_speed: '{{animation_speed}}', /* fast/slow/normal */
        slideshow: {{slideshow}}, /* false OR interval time in ms */
        autoplay_slideshow: {{autoplay_slideshow}}, /* true/false */
        opacity: {{opacity}}, /* Value between 0 and 1 */
        show_title: {{show_title}}, /* true/false */
        allow_resize: {{allow_resize}}, /* Resize the photos bigger than viewport. true/false */
        default_width: {{default_width}},
        default_height: {{default_height}},
        counter_separator_label: '{{counter_separator_label}}', /* The separator for the gallery counter 1 "of" 2 */
        theme: '{{theme}}', /* light_rounded / dark_rounded / light_square / dark_square / facebook */
        horizontal_padding: {{horizontal_padding}}, /* The padding on each side of the picture */
        hideflash: {{hideflash}}, /* Hides all the flash object on a page, set to TRUE if flash appears over prettyPhoto */
        wmode: '{{wmode}}', /* Set the flash wmode attribute */
        autoplay: {{autoplay}}, /* Automatically start videos: True/False */
        modal: {{modal}}, /* If set to true, only the close button will close the window */
        deeplinking: {{deeplinking}}, /* Allow prettyPhoto to update the url to enable deeplinking. */
        overlay_gallery: {{overlay_gallery}}, /* If set to true, a gallery will overlay the fullscreen image on mouse over */
        keyboard_shortcuts: {{keyboard_shortcuts}}, /* Set to false if you open forms inside prettyPhoto */
        ie6_fallback: {{ie6_fallback}},
        markup: '{{markup|raw}}',
        gallery_markup: '{{gallery_markup|raw}}',
        image_markup: '{{image_markup|raw}}',
        flash_markup: '{{flash_markup|raw}}',
        quicktime_markup: '{{quicktime_markup|raw}}',
        iframe_markup: '{{iframe_markup|raw}}',
        inline_markup: '{{inline_markup|raw}}',
        custom_markup: '{{custom_markup|raw}}'
    });
});
</script>